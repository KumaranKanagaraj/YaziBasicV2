                    <a class="nav-link" href="@Url.Action("Category","Admin")">Category</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="content-heading bg-white">
        <div class="row">
            <div class="col-sm-9">
                <h4 class="m0 text-thin">Welcome to iwishu.in dashboard</h4><small>Create, update, Delete post and Categories</small>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <h5 class="mt0">Create Post</h5>
        <div class="cardbox cardbox-default">
            <div class="cardbox-body">
                <form id="create-post" enctype="multipart/form-data" action="/admin/add-post/add" method="post">
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select class="form-control" id="category" name="CategoryId">
                            @foreach (var category in Model.Categories)
                            {
                                <option value=@category.CategoryId>@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="author">Author</label>
                        <select class="form-control" id="author" name="AuthorId">
                            @{
                                int counter = 1;
                            }
                            @foreach (var author in Model.Authors)
                            {
                                <option value=@(counter++)>@author</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="Title" placeholder="Title of the post">
                    </div>

                    <div class="form-group">
                        <label for="txtEditor">Post</label>
                        <textarea class="form-control" id="txtEditor" name="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="img-url">Image Url</label>
                        <input type="text" class="form-control" id="img-path" name="ImagePath" placeholder="Url for Image">
                    </div>
                    @*<div class="form-group">
                        <label for="upload-image">Upload Image</label>
                        <input type="file" name="ImageFile" class="form-control-file" id="upload-image">
                        <small id="emailHelp" class="form-text text-muted"><i>* Supported - .png, .jpg, .gif</i></small>
                    </div>*@
                    <div class="form-group">
                        <label for="tags">Tags</label>
                        <input type="text" class="form-control" id="tags" name="Tags" placeholder="tags,tags,tags">
                    </div>

                    <div class="">
                        <div class="clearfix">
                            <div class="float-left">
                                <div class="checkbox c-checkbox">
                                    <label>
                                        <input type="checkbox" name="IsPublic" value="true"><span class="ion-checkmark-round"></span>Publish
                                    </label>
                                </div>
                            </div>
                            <div class="float-right mt-sm">
                                <button class="btn btn-primary btn-flat" type="submit">SUBMIT</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
