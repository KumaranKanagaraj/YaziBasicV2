{
  "dependencies": {
    "Microsoft.NETCore.App": {
      "version": "1.0.1",
      "type": "platform"
    },
    "Microsoft.AspNetCore.Diagnostics": "1.0.0",
    "Microsoft.AspNetCore.Mvc": "1.1.3",
    "Microsoft.AspNetCore": "1.1.2",
    "Microsoft.AspNetCore.Server.IISIntegration": "1.0.0",
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.1",
    "Microsoft.Extensions.Logging.Console": "1.0.0",
    "Microsoft.EntityFrameworkCore.Design": "1.1.2",
    "Microsoft.EntityFrameworkCore.Tools": "1.1.0-preview4-final",
    "Pomelo.EntityFrameworkCore.MySql": "1.1.0",
    "AutoMapper": "6.2.2",
    "Microsoft.AspNetCore.Mvc.Formatters.Xml": "1.1.2",
    //"Microsoft.Extensions.Logging": "1.1.0",
    //"Microsoft.Extensions.Logging.Debug": "1.1.0",
    "Serilog": "2.2.0",
    "Serilog.Extensions.Logging": "1.2.0",
    "Serilog.Sinks.RollingFile": "2.0.0",
    "Serilog.Sinks.File": "3.0.0",
    "Microsoft.AspNetCore.StaticFiles": "1.1.2",
    "Microsoft.AspNet.WebApi.Client": "5.2.2",
    "Microsoft.AspNetCore.Cors": "1.1.2",
    "Swashbuckle.AspNetCore": "1.1.0"
  },

  "tools": {
    "Microsoft.AspNetCore.Server.IISIntegration.Tools": "1.0.0-preview2-final",
    "Microsoft.EntityFrameworkCore.Tools": "1.1.0-preview4-final",
    "Microsoft.EntityFrameworkCore.Tools.DotNet": "1.0.1"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dotnet5.6",
        "portable-net45+win8"
      ]
    }
  },

  "buildOptions": {
    "emitEntryPoint": true,
    "preserveCompilationContext": true,
    "xmlDoc": true
  },

  "runtimeOptions": {
    "configProperties": {
      "System.GC.Server": true
    }
  },

  "publishOptions": {
    "include": [
      "wwwroot",
      "Views",
      "web.config"
    ]
  },

  "scripts": {
    "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%" ]
  }
}
